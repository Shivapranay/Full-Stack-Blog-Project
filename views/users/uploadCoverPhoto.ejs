<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script src="https://kit.fontawesome.com/42a182743f.js" crossorigin="anonymous"></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/uploadPhoto.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Upload Cover Photo</title>
</head>

<body>
    <!-- nav -->
    <%-include("../partials/navBar.ejs")%>
    <div class="form-container">
        <!-- icon -->
        <h1>Upload Cover photo</h1>
        <p>
            <!-- upload icon -->
        </p>
        <% if(error){ %>
        <small class="error">
            <i class="fas fa-exclamation-circle"></i>
            <%=error%>
        </small>
        <% } %>
        <form enctype="multipart/form-data" action="/api/v1/users/cover-photo-upload?_method=PUT" method="POST">
            <label for="image">Select Imgae</label>
            <input type="file" name="profile" id="image" />
            <button type="submit">
                <i class="fas fa-upload"></i>
            </button>
        </form>
    </div>
    <%-include("../partials/footer.ejs") %>
</body>

</html>